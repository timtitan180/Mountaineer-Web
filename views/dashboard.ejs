            margin-left:600px;
            border-radius:4px;
            border:1px solid black;
            box-shadow:2px 4px 6x blue;
        }

        .delete-button {
            float:right;
            height:40px;
            width:60px;
            background-color:red;
            color:yellow;
        }

        .postContainer {
            height: 200px;
            width:250px;
            border:1px solid black;
        }

        .posts {
            height: 100px;
            width:300px;
            border:1px solid yellow;

            color:green;      
        }

        .addedPost {
            margin-top:20px;
            border-radius: 14px;
            border:0.5px solid gray;
            margin-left:810px;
            height:120px;
            width:400px;
            background-color:white;
            color:yellow;
        }

        #post {
            font-size: medium;
            height:205px;
            font-size:18px;
            padding-bottom:10px;
            margin-top:40px;
            color:black;
            margin-left:800px;
            resize: none;
        }

        nav {
            height: 70px;
            background-color: rgba(0,0,0,0.4);
        }

            ul {
            list-style-type: none;
            margin:0;
            padding: 0;
    }

    ul li {
        float:right;
        display: inline;
        margin-left: 10px;
    }

        a {
            font-size: medium;
            text-decoration: none;
            color:gray;
        }

        a:hover {
            color:yellow;
        }
        li:hover {
            color:yellow;  
        }

        #mountain-icon {
            height: 70px;
            width:70px; 
            display: block;
            position: absolute;
        }

        nav:nth-child(2) {
            margin-top:20px;
        }

        #mountain-icon::after {
            opacity: 0.5;
            position: absolute;
            z-index: -1;
        }
         #button {
             position: absolute;
             margin-top:206px;
            margin-left:-95px;             
         }

         #container-child {
             height:200px;
             width:200px;
             border:2px solid rebeccapurple;
             background-color: black;
         }

         .deleteButton {
             position: relative;
             height: 20px;
             width:20px;
             background-color: white;
             color:red
         }
    </style>
</head>
<body> 
        <nav><span><img id="mountain-icon" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRtsXbxmnPv4gkF0dCJGK4uvj2PR1hh_8VpLQ&usqp=CAU"/></span><ul><li><a href="dashboard/delete" style="color:red"></a></li><li><a href="/">Home</a></li><li>About</li><li><a href="/signup">Sign Up</a></li><li><a href="/login">Sign In</a></li></ul></nav>     
        <div style="background-color:white;color:white;height:10px;width:200px;display:inline;"><p style="font-size:20px;font-family: Arial, Helvetica, sans-serif;">Hello <%=name%></p></div>
        <div class="createpostContainer">
        <textarea id="post" placeholder="Write whats on your mind..." name="post"></textarea>
        <button class="button is-primary" onclick="addPost" id="button">Send Post</button>
        </div>
        </div>
        <div class="mainContainer">
        </div>
    <script>


       var mainContainer = document.querySelector(".mainContainer");

        var post = document.getElementById("post");

        var addedPosts = [];

        function addPost() {

            var date = new Date();

            mainContainer.innerHTML += `<div class="addedPost" style="border:2px solid white;text-align:center"><a href="/delete" style="float:left;color:red" class="delete">DELETE</a><p style="margin-top:30px;color:black;font-size:16px">${post.value}</p><span></span><p style="margin-top:10px;color:gray">${date.toDateString()}</p></div>`

            deletePost = document.querySelectorAll(".delete");

            for(var i=0;i<deletePost.length;i++){
                deletePost[i].onclick = function(){
                    this.parentNode.remove();
                }
             }           
    }
        document.getElementById("button").addEventListener("click",addPost);
        </script>
</body>
</html>